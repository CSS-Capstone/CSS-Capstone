        <div class="popup-close" onclick="closeForm()">
            &times;
        </div>
        <img src="/images/register_icon_2.png" class="avatar">
        <h1 class = "box_title">Reset Password</h1>
        <span class = "error_message"><%= resetPasswordMessage %></span>
        <form action="/auth/reset_password" method = "POST" id = "reset_password" onsubmit = "return checkResetPasswordForm(this);">
