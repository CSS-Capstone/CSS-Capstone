                <label for="finder">Poster</label>
            </div> -->
            
            <!-- ============ -->
            <input type="submit" name="" value="Make Account" id = "input_submit_register">
            <span class = "log_in_link">Already have an account? </span><a href="#" onclick = "showLogin()" class = "show_login">Log In</a>
        </form>
        <span><%= registerMessage %></span>
    </div>
