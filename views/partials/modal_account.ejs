        </form>
    </div>
    <!-- Make an if statement to show this message -->
    <div class = "message_register">
        <p>Your password has been changed. Please check your email for the confirmation.</p>
        <a href="#" onclick = "closeForm()"> Got it!</a>
    </div>
    <!-- Reset Password -->
    <%if (stayInWhere == 'reset password') { %>
    <div class = "reset_password_form" id = "chosen_reset_password">
    <% } else { %>
    <div class = "reset_password_form" id = "not_chosen_reset_password">
