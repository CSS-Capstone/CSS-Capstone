    <div class = "login_form">
        <div class="popup-close" onclick="closeForm()">
            &times;
        </div>
        <img src="/images/sign_in_icon.png" class="avatar">
        <h1 class = "box_title">Login</h1>
        <form action="" id = "login">
            <p>Email</p>
            <input type="text" name="" placeholder="Enter Email">
            <p>Password</p>
            <input type="password" name="" placeholder="Enter Password">
            <br>
            <input type="submit" name="" value="Login" id = "input_submit_login">
            <a href="/google">Google Sign In</a><br>
            <a href="/facebook">Facebook Sign In</a><br>
            <a href="#">Forgot password?</a><br>
            <a href="#" onclick="showRegister()" class = "show_register">Don't have an account?</a>
        </form>
    </div>
    <div class = "register_form">
        <div class="popup-close" onclick="closeForm()">
            &times;
        </div>
        <img src="/images/register_icon_2.png" class="avatar">
        <h1 class="box_title">Register</h1>
        <!-- action = "where you want to call the post request for register" -->
        <!-- method = "POST" -->
        <form action="/auth/register" method = "POST" id = "register" onsubmit="return checkRegisterForm(this);">
            <p>Username</p>
            <input type="text" name="username" placeholder="Enter Username">
            <p>Email</p>
            <input type="text" name="email" placeholder="Enter Email">
            <p>Password</p>
            <input type="password" name="newPassword" id = "new_password" placeholder="Enter Password" >
            <p>Confirm Password</p>
            <input type="password" name="confirmPassword" id = "confirm_password" placeholder="Confirm Password" >
            <!-- Radio button, figure out the appropiate css -->
