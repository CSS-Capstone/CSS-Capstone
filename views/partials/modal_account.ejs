    <!-- <div class = "login_form"> -->
        <div class="popup-close" onclick="closeForm()">
            &times;
        </div>
        <img src="/images/sign_in_icon.png" class="avatar">
        <h1 class = "box_title">Login</h1>
        <span class = "error_message_login"><%= loginMessage %></span>
        <form action="/auth/login" method = "POST" id = "login" onsubmit="return checkLoginForm(this);">
            <p>Email</p>
            <input type="text" name="email" placeholder="Enter Email">
            <span class = "error_message" id = "login_error_message_empty" style = "display: none;">The email cannot be empty</span>
            <span class = "error_message" id = "login_error_message_invalid" style = "display: none;">The email needs to be valid</span>
            <p>Password</p>
            <input type="password" name="password" placeholder="Enter Password">
            <span class = "error_message" id = "login_error_message_password" style = "display: none;">The password cannot be empty</span>
            <br>
            <input type="submit" name="" value="Login" id = "input_submit_login">
            <!-- <input type="submit" name="" value="Login" id = "input_submit_login" onclick = "showLoginMessage()"> -->
            <a href="/google">Google Sign In</a><br>
            <a href="/facebook">Facebook Sign In</a><br>
            <a href="#" onclick = "showResetPassword()">Forgot password?</a><br>
            <a href="#" onclick = "showRegister()">Don't have an account?</a>
        </form>
    </div>
    <!-- Make an if statement to show this message -->
    <div class = "message_login">
        <p>Your password has been changed. Please check your email for the confirmation.</p>
        <a href="#" onclick = "closeForm()"> Got it!</a>
    </div>
    <!-- Register -->
    <% if (stayInWhere == 'register') { %>
    <div class = "register_form" id = "chosen_register">
    <% } else { %>
    <div class = "register_form" id = "not_chosen_register">
    <% } %>
    <!-- <div class = "register_form"> -->
