        </div>
        <div class="navbar__right__menu">
            <span class="navbar__menu__item">
                <a href="#"><i class="far fa-moon"></i></a>
            </span>
            <span class="navbar__menu__item"><a href="#" onclick="openForm()">Become a host</a></span>
            <%- include('../partials/modal_account') %>
            <span class="navbar__menu__item">
                <a href="#" onclick="showDropDown()" class="dropdown__link">
                    <i class="fas fa-bars"></i>
                    <i class="far fa-user-circle"></i>
                </a>
            </span>
            <%- include('../partials/user_dropdown_menu', {isLoggedIn: isLoggedIn}) %>
        </div>
    </nav>
    <section id="wrapper">
        <div class="searchbar">
            <form action="/" method="post">
                <div class="searchbar_container">
                    <div class="searchbar__item" id="location">
                        <label for="searchbar__location">
                            Location
                        </label><br>
                        <input 
                            id="location__searchterm" type="text"
                            name="location"
                            value='<%= searchKeyword.location %>'
                            placeholder="Where are you going?"/>
                    </div>
                    <div class="searchbar__item" id="checkin">
                        <label for="searchbar__checkin">
                            Check in
                        </label><br>
                        <input 
                            id="checkin__date" 
                            name="chkin"
                            type="text" 
                            value='<%= searchKeyword.checkInDate %>'
                            placeholder="Add dates"/>
                        <script>
                            var checkinDate = new ej.calendars.DatePicker({ width: "170px" });
                            checkinDate.appendTo('#checkin__date');
                        </script>
                    </div>
                    <div class="searchbar__item" id="checkout">
                        <label for="searchbar__checkout">
                            Check out
                        </label><br>
                        <input 
                            id="checkout__date"
                            name="chkout"
                            type="text" 
                            value='<%= searchKeyword.checkOutDate %>'
                            placeholder="Add dates"/>
                        <script>
                            var checkinDate = new ej.calendars.DatePicker({ width: "170px" });
                            checkinDate.appendTo('#checkout__date');
                        </script>
                    </div>
                    <!-- <div class="searchbar__item" id="guests">
                        Guests
                    </div> -->
                    <div class="searchbar__item" id="searchbtn">
                        <button class="submitBtn" type="submit">
                            <i class="fas fa-search-location"></i>
                        </button>
                    </div>
                </div>
                
            </form>
        </div>
    </section>
</div>
