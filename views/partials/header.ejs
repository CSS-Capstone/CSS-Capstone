                                <input 
                                    id="location__searchterm" type="text"
                                    name="location"
                                    value='<%= searchKeyword.location %>'
                                    placeholder="Where are you going?"/>
                            </div>
                            <!-- <div>
                                <%= searchKeyword.checkInDate %> - <%= searchKeyword.checkOutDate %>
                            </div> -->
                            <div class="keywords__item" id="checkin">
                                
                                <input 
                                    id="checkin__date" 
                                    name="chkin"
                                    type="text" 
                                    value='<%= searchKeyword.checkInDate %>'
                                    placeholder="Add dates"/>
                                
                            </div>
                            <div class="keywords__item" id="checkout">
                                
                                <input 
                                    id="checkout__date"
                                    name="chkout"
                                    type="text" 
                                    value='<%= searchKeyword.checkOutDate %>'
                                    placeholder="Add dates"/>
                                
                            </div>
                            <!-- <div class="searchbar__item" id="guests">
